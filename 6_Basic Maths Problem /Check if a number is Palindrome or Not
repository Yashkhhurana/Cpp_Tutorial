
#include <iostream>
using namespace std;
bool palindrome(int n){
    
    int revNum = 0;
    int dup = n;
    while (n > 0) {
        revNum = (revNum * 10) + n % 10;
        n = n / 10;
    }
   return dup == revNum ? true:false;
}
int main() {
    int number = 1221;
    if (palindrome(number)) cout << number << " is a palindrome." << endl;
    else cout << number << " is not a palindrome." << endl;
}
                              
                        
